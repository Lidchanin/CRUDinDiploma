<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lidchanin.crudindiploma.activity.AddingShoppingListActivity">

    <Button
        android:id="@+id/adding_shopping_list_button_add_shopping_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/adding_shopping_list_button_add_shopping_list"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/adding_shopping_list_edit_text_enter_shopping_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/adding_shopping_list_exit_text_enter_shopping_list_name"
        android:layout_marginTop="178dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
